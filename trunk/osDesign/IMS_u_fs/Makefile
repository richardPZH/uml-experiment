#FUSE_FLAGS = $(shell pkg-config --libs --cflags "fuse" )

all : format u_fs clean

u_fs : u_fs.o Block_manpulate.o
	gcc	`pkg-config fuse --cflags --libs` -o u_fs u_fs.o Block_manpulate.o

format : format.o
	gcc	-o format format.o

u_fs.o : u_fs.c Block_manpulate.c
	gcc	-Wall `pkg-config fuse --cflags --libs` -c u_fs.c -I .

Block_manpulate.o : Block_manpulate.c 
	gcc	-Wall -c Block_manpulate.c -I .


format.o : format.c
	gcc	-Wall -c format.c -I .


.PHONY : clean

clean :
	rm *.o -v
